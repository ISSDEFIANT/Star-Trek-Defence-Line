using UnityEngine;
using System.Collections;
using System.Xml.Linq;

public class GameDataSaver : MonoBehaviour {

	// Use this for initialization
	void Start () {
	
	}
	
	// Update is called once per frame
	void Update () {
	
	}
	public XElement GetElement(){
		//Все элементы обращаются в атрибуты.
		XAttribute LevelNum = new XAttribute ("LvlNum", Application.loadedLevel);

		XAttribute Humans = new XAttribute ("Crew", gameObject.GetComponent<GlobalDB>().Humans);
		XAttribute Titenium = new XAttribute ("Titenium", gameObject.GetComponent<GlobalDB>().Titanium);
		XAttribute Dilithium = new XAttribute ("Dilithium", gameObject.GetComponent<GlobalDB>().Dilithium);

		XAttribute EnemyHumans = new XAttribute ("EnemyCrew", gameObject.GetComponent<GlobalDB>().EnemyHumans);
		XAttribute EnemyTitenium = new XAttribute ("EnemyTitenium", gameObject.GetComponent<GlobalDB>().EnemyTitanium);
		XAttribute EnemyDilithium = new XAttribute ("EnemyDilithium", gameObject.GetComponent<GlobalDB>().EnemyDilithium);

		XAttribute FreiandHumans = new XAttribute ("FreandCrew", gameObject.GetComponent<GlobalDB>().FreandHumans);
		XAttribute FreiandTitenium = new XAttribute ("FreandTitenium", gameObject.GetComponent<GlobalDB>().FreandTitanium);
		XAttribute FreiandDilithium = new XAttribute ("FreandDilithium", gameObject.GetComponent<GlobalDB>().FreandDilithium);
				
		XElement element = new XElement ("instanceGDB", LevelNum, Humans, Titenium, Dilithium, EnemyHumans, EnemyTitenium, EnemyDilithium, FreiandHumans,FreiandTitenium, FreiandDilithium);
		return element;
	}
}
