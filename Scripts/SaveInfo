				Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().SaveName = SaveName;

					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().SaveObjects = SaveObjects;

					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().ObjectsHealth = ObjectsHealth;
					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().ObjectsShilds = ObjectsShilds;
					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().ObjectsGenerator = ObjectsGenerator;
					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().ObjectsWeapon = ObjectsWeapon;
					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().ObjectsEngings = ObjectsEngings;

					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().AI = AI;
					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().FriendAI = FriendAI;

					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().CanAttack = CanAttack;

					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().Build = Build;
					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().IsFlag = IsFlag;

					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().Agrass = Agrass;
					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().Protact = Protact;
					Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().Idle = Idle;

				Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().ObjectTransform = ObjectTransform;

				Owner.GetComponent<SaveAndLoad> ().Slot4P.GetComponent<SaveInfo> ().LevelName = LevelName;
