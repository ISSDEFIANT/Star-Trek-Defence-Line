					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().ObjectsEngings = ObjectsEngings;

					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().AI = AI;
					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().FriendAI = FriendAI;

					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().CanAttack = CanAttack;

					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().Build = Build;
					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().IsFlag = IsFlag;

					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().Agrass = Agrass;
					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().Protact = Protact;
					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().Idle = Idle;

				Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().ObjectTransform = ObjectTransform;

				Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().LevelName = LevelName;
				}
				Timer = 1;
			}
		}
	}
