using UnityEngine;
using System.Collections;
using System.Collections.Generic;

public class SaveInfo : MonoBehaviour {
	public string SaveName;
	public List<string> SaveObjects;

	public List<Transform> ObjectTransform;

	public List<float> ObjectsHealth;
	public List<float> ObjectsShilds;
	public List<float> ObjectsGenerator;
	public List<float> ObjectsWeapon;
	public List<float> ObjectsEngings;

	public List<bool> AI;
	public List<bool> FriendAI;

	public List<bool> CanAttack;

	public List<bool> Build;
	public List<bool> IsFlag;

	public List<bool> Agrass;
	public List<bool> Protact;
	public List<bool> Idle;

	public string LevelName;
	public GameObject Owner;

	public float Timer;

	public bool slot1;
	public bool slot2;
	public bool slot3;
	public bool slot4;
	public bool slot5;
	// Use this for initialization
	void Start () {
		Timer = 1;
	}
	
	// Update is called once per frame
	void Update () {
			if (Timer > 0) {
				Timer -= Time.deltaTime;
			}
			if (Timer <= 0) {
				if(slot1){
				Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().SaveName = SaveName;

					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().SaveObjects = SaveObjects;

					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().ObjectsHealth = ObjectsHealth;
					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().ObjectsShilds = ObjectsShilds;
					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().ObjectsGenerator = ObjectsGenerator;
					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().ObjectsWeapon = ObjectsWeapon;
					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().ObjectsEngings = ObjectsEngings;

					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().AI = AI;
					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().FriendAI = FriendAI;

					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().CanAttack = CanAttack;

					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().Build = Build;
					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().IsFlag = IsFlag;

					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().Agrass = Agrass;
					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().Protact = Protact;
					Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().Idle = Idle;

				Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().ObjectTransform = ObjectTransform;

				Owner.GetComponent<SaveAndLoad> ().Slot1P.GetComponent<SaveInfo> ().LevelName = LevelName;
			}
				if(slot2){
				Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().SaveName = SaveName;

					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().SaveObjects = SaveObjects;

					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().ObjectsHealth = ObjectsHealth;
					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().ObjectsShilds = ObjectsShilds;
					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().ObjectsGenerator = ObjectsGenerator;
					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().ObjectsWeapon = ObjectsWeapon;
					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().ObjectsEngings = ObjectsEngings;

					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().AI = AI;
					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().FriendAI = FriendAI;

					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().CanAttack = CanAttack;

					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().Build = Build;
					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().IsFlag = IsFlag;

					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().Agrass = Agrass;
					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().Protact = Protact;
					Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().Idle = Idle;

				Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().ObjectTransform = ObjectTransform;

				Owner.GetComponent<SaveAndLoad> ().Slot2P.GetComponent<SaveInfo> ().LevelName = LevelName;
				}
				if(slot3){
				Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().SaveName = SaveName;

					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().SaveObjects = SaveObjects;

					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().ObjectsHealth = ObjectsHealth;
					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().ObjectsShilds = ObjectsShilds;
					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().ObjectsGenerator = ObjectsGenerator;
					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().ObjectsWeapon = ObjectsWeapon;
					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().ObjectsEngings = ObjectsEngings;

					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().AI = AI;
					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().FriendAI = FriendAI;

					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().CanAttack = CanAttack;

					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().Build = Build;
					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().IsFlag = IsFlag;

					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().Agrass = Agrass;
					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().Protact = Protact;
					Owner.GetComponent<SaveAndLoad> ().Slot3P.GetComponent<SaveInfo> ().Idle = Idle;

