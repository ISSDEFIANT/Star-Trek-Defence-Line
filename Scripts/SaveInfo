				Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().SaveName = SaveName;

					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().SaveObjects = SaveObjects;

					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().ObjectsHealth = ObjectsHealth;
					Owner.GetComponent<SaveAndLoad> ().Slot5P.GetComponent<SaveInfo> ().ObjectsShilds = ObjectsShilds;
